{
	"appId": "com.ejjy.inventory.headoffice.app",
	"productName": "Head Office",
	"extraResources": [
		"api/**",
		"gcs-service-key.json",
		"!api/.venv",
		"!api/db.sqlite3",
		"!api/backend/.env"
	],
	"publish": [
		{
			"provider": "github",
			"owner": "EJJY-Devs",
			"repo": "ejjy-app-headoffice-release",
			"releaseType": "prerelease"
		}
	],
	"nsis": {
		"oneClick": false,
		"allowToChangeInstallationDirectory": false
	},
	"extraMetadata": {
		"name": "ejjy-inventory-headoffice-app"
	},
	"icon": "icons/HO.ico",
	"mac": {
		"category": "public.app-category.business",
		"icon": "icons/HO.icns",
		"target": [
			{
				"target": "dmg",
				"arch": ["x64", "arm64"]
			},
			{
				"target": "zip",
				"arch": ["x64", "arm64"]
			}
		],
		"hardenedRuntime": true,
		"gatekeeperAssess": false,
		"entitlements": "entitlements.mac.plist",
		"entitlementsInherit": "entitlements.mac.plist"
	},
	"win": {
		"icon": "icons/HO.ico",
		"target": [
			{
				"target": "nsis",
				"arch": ["x64"]
			}
		]
	}
}
