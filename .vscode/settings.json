{
	"editor.formatOnSave": true,
	"editor.detectIndentation": true,
	"[typescriptreact]": {
		"editor.tabSize": 2,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"search.exclude": {
		"**/public": true,
		"**/api": true,
		"**/archive": true,
		"**/.git": true,
		"**/node_modules": true
	},
	"typescript.preferences.importModuleSpecifier": "non-relative"
}
